{
  "manifest_version": 2,
  "name": "Boozang AI",
  "description": "Boozang extension allows you to record automated regression tests and highlight bugs, in the browser.",
  "version": "1.0",
  "permissions": ["tabs", "*://*/*"],
  "background": {
    "scripts": ["background"],
    "persistent": false
  },
  "externally_connectable":{
    "matches":["*://localhost/*","*://*.boozang.com/*"]
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames":true,
      "js": ["content"]
    }
  ],
  "icons": { 
    "16": "img/boozang16.png",
    "48": "img/boozang48.png",
    "128": "img/boozang128.png"
  },
  "browser_action": {
    "default_icon": "img/boozang.png",
    "defualt_title": "Launch Boozang"
  }
}
